<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="900" prefWidth="1400" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="edu.farmingdale.recipegenerator.LoginController">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImageView"
               preserveRatio="false"
               smooth="true"
               AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" />

    <Text fx:id="titleText"
          layoutX="30.0" layoutY="60.0"
          style="-fx-font-family: 'Georgia'; -fx-font-size: 40px; -fx-font-weight: bold;
                 -fx-fill: linear-gradient(to right, #9B4DFF, #ADD8E6);">
        <effect>
            <DropShadow radius="5" offsetX="2" offsetY="2" color="black"/>
        </effect>
        FlavorBot
    </Text>

    <Text fx:id="titlePhrase"
          layoutX="30.0" layoutY="100.0"
          style="-fx-font-family: 'Georgia'; -fx-font-size: 24px; -fx-font-style: italic; -fx-font-weight: bold;
                 -fx-fill: linear-gradient(to right, #FFD700, #FF8C00);">
        <effect>
            <DropShadow radius="4" offsetX="1.5" offsetY="1.5" color="black"/>
        </effect>
        - Your personal chef, powered by AI
    </Text>

    <!-- Login Container Anchored to Right -->
    <AnchorPane layoutY="330" prefWidth="300.0" prefHeight="250.0"
                AnchorPane.rightAnchor="40.0">

        <Text layoutX="25.0" layoutY="0.0"
              style="-fx-font-family: 'Georgia'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #9B4DFF;">
            <effect>
                <DropShadow radius="3" offsetX="1" offsetY="1" color="black"/>
            </effect>
            Login
        </Text>

        <TextField fx:id="usernameTextField"
                   layoutX="25.0" layoutY="30.0"
                   promptText="Username"
                   style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.85);
                          -fx-text-fill: black; -fx-prompt-text-fill: #555; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="1" offsetY="1" color="black"/>
            </effect>
        </TextField>

        <PasswordField fx:id="passwordField"
                       layoutX="25.0" layoutY="80.0"
                       promptText="Password"
                       style="-fx-pref-width: 250px; -fx-background-color: rgba(255, 255, 255, 0.85);
                              -fx-text-fill: black; -fx-prompt-text-fill: #555; -fx-font-size: 14px;">
            <effect>
                <DropShadow radius="3" offsetX="1" offsetY="1" color="black"/>
            </effect>
        </PasswordField>

        <Button fx:id="loginButton"
                layoutX="25.0" layoutY="130.0"
                text="Log In"
                onAction="#handleLoginButtonAction"
                style="-fx-font-family: 'Georgia'; -fx-pref-width: 250px; -fx-background-color: #9B4DFF;
                       -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
            <effect>
                <DropShadow radius="5" offsetX="2" offsetY="2" color="black"/>
            </effect>
        </Button>

        <Button fx:id="signUpButton"
                layoutX="25.0" layoutY="180.0"
                text="Sign Up"
                onAction="#handleSignUpButtonAction"
                style="-fx-font-family: 'Georgia'; -fx-pref-width: 250px; -fx-background-color: #FF9800;
                       -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
            <effect>
                <DropShadow radius="5" offsetX="2" offsetY="2" color="black"/>
            </effect>
        </Button>

    </AnchorPane>

</AnchorPane>
