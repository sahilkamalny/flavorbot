<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="edu.farmingdale.recipegenerator.PreferencesController"
            style="-fx-background-color: #1e1e1e; -fx-padding: 20;">

    <!-- Optional Background Image -->
    <ImageView fx:id="backgroundImageView"
               AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               preserveRatio="false" fitWidth="1000"
               opacity="0.1" />

    <HBox spacing="30" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 30;">

        <!-- Left Panel -->
        <VBox alignment="TOP_CENTER" spacing="25" prefWidth="380"
              style="-fx-background-color: #2a2a2a; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 5);">

            <Label text="Select Your Preferences"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

            <!-- Preference Controls -->
            <VBox spacing="15">
                <Label text="Favorite Food Style:" style="-fx-text-fill: #cccccc;" />
                <ComboBox fx:id="foodStyleComboBox"
                          promptText="Select food style"
                          style="-fx-background-radius: 6; -fx-padding: 4;" />
            </VBox>

            <VBox spacing="15">
                <Label text="Dietary Preferences:" style="-fx-text-fill: #cccccc;" />
                <ComboBox fx:id="dietaryPreferencesComboBox"
                          promptText="Select dietary preference"
                          style="-fx-background-radius: 6; -fx-padding: 4;" />
            </VBox>

            <VBox spacing="15">
                <Label text="Spice Level:" style="-fx-text-fill: #cccccc;" />
                <Slider fx:id="spiceLevelSlider" min="0" max="10"
                        style="-fx-control-inner-background: #444444;" />
            </VBox>

            <VBox spacing="15">
                <Label text="Meal Type:" style="-fx-text-fill: #cccccc;" />
                <ComboBox fx:id="mealTypeComboBox"
                          promptText="Select meal type"
                          style="-fx-background-radius: 6; -fx-padding: 4;" />
            </VBox>

            <Button text="Continue"
                    onAction="#handleContinueButtonAction"
                    style="-fx-font-size: 14px; -fx-background-color: #00c853; -fx-text-fill: white; -fx-background-radius: 6;" />
        </VBox>

        <!-- Right Panel -->
        <VBox spacing="20" prefWidth="600"
              style="-fx-background-color: #2a2a2a; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 5);">

            <!-- Ingredient Input -->
            <VBox spacing="10">
                <Label text="Ingredients You Have Available:"
                       style="-fx-text-fill: #ffffff; -fx-font-size: 16px;" />
                <TextField fx:id="ingredientsAvailableField"
                           promptText="Search or add an ingredient"
                           style="-fx-background-radius: 6; -fx-padding: 6;" />
                <Button text="Add Ingredient"
                        onAction="#handleAddIngredient"
                        style="-fx-background-color: #03a9f4; -fx-text-fill: white; -fx-background-radius: 6;" />
            </VBox>

            <!-- Ingredients Table -->
            <TableView fx:id="ingredientsTable" VBox.vgrow="ALWAYS"
                       style="-fx-background-radius: 6; -fx-background-color: #333333; -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="ingredientNameColumn" text="Ingredient Name" prefWidth="280">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="ingredientQuantityColumn" text="Quantity" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantity" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="ingredientCategoryColumn" text="Category" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="category" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</AnchorPane>
