<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="1080.0" prefWidth="1920.0"
            style="-fx-background-color: #000000; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.farmingdale.recipegenerator.PreferencesController"
            stylesheets="@../../../Styling/preference.css">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImageView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <!-- Centered Title and Description -->
    <VBox layoutX="460.0" layoutY="40.0" alignment="CENTER">
        <children>
            <Label text="Manage Your Preferences"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"
                   wrapText="true" />
            <Label text="Set your dietary, cooking, and food preferences so we can generate better recipes tailored to you."
                   style="-fx-font-size: 18px; -fx-text-fill: #cccccc; -fx-padding: 10 0 20 0;"
                   wrapText="true" maxWidth="800.0" />
            <Separator prefWidth="800.0" style="-fx-background-color: white;" />
        </children>
    </VBox>

    <!-- Preferences Form Section -->
    <HBox fx:id="hBoxholder" layoutX="100.0" layoutY="180.0" spacing="50.0"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"
          AnchorPane.topAnchor="180.0" AnchorPane.bottomAnchor="120.0"
          alignment="CENTER">
        <children>

            <!-- First Column Labels -->
            <VBox spacing="30.0" maxWidth="300.0">
                <children>
                    <Label text="Dietary Preferences:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Meal Type:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Spice Level:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Cooking Skills:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Food Style:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Food Allergies:" style="-fx-text-fill: white;" wrapText="true" />
                </children>
            </VBox>

            <!-- First Column Inputs -->
            <VBox spacing="25.0" maxWidth="400.0" fillWidth="true">
                <children>
                    <ComboBox fx:id="dietaryPreferencesComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="mealTypeComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="spiceLevelSlider" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="skillsComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="foodStyleComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <TextArea fx:id="allergiesTextArea" promptText="E.g., Lactose, Gluten, Fish"
                              wrapText="true" maxWidth="Infinity" prefHeight="100.0" opacity="0.9">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </TextArea>
                </children>
            </VBox>

            <!-- Second Column Labels -->
            <VBox spacing="30.0" maxWidth="300.0">
                <children>
                    <Label text="Portion Size:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Number of Servings:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Cooking Time:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Flavor:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Kitchen Messiness:" style="-fx-text-fill: white;" wrapText="true" />
                    <Label text="Additional Notes:" style="-fx-text-fill: white;" wrapText="true" />
                </children>
            </VBox>

            <!-- Second Column Inputs -->
            <VBox spacing="25.0" maxWidth="400.0" fillWidth="true">
                <children>
                    <ComboBox fx:id="portionSizeComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="numServingComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="cokingTimeComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="flavorComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <ComboBox fx:id="messComboBox" maxWidth="Infinity" prefHeight="40.0" />
                    <TextArea fx:id="notesTextArea" promptText="E.g., Low calorie, High protein"
                              wrapText="true" maxWidth="Infinity" prefHeight="100.0" opacity="0.9">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </TextArea>
                </children>
            </VBox>
        </children>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </HBox>

    <!-- Update Button -->
    <Button fx:id="updateButton" layoutX="875.0" layoutY="1010.0"
            onAction="#handleContinueButtonAction"
            prefHeight="43.0" prefWidth="200.0"
            style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-text-fill: black; -fx-background-radius: 20;"
            text="Update Preferences" />
</AnchorPane>
