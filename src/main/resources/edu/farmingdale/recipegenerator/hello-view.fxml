<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImage" fitHeight="1080" fitWidth="1920" preserveRatio="false" StackPane.alignment="CENTER" />


    <!-- Frosted Glass Content Pane -->
    <BorderPane fx:id="mainPane" styleClass="main-pane">
        <!-- Top -->
        <top>
            <HBox fx:id="topBar" prefHeight="0.0" prefWidth="1984.0" spacing="10" styleClass="hbox-top">
                <Label prefHeight="25.0" prefWidth="305.0" styleClass="label-title" text="FlavorBot" />
                <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="1667.0">
                    <children>
                        <Button fx:id="preferencesButton" styleClass="preferences-button" text="Preferences" />
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </HBox>
            </HBox>
        </top>

        <!-- Center: SplitPane for left (Ingredients) and right (Recipe Output) -->
        <center>
            <SplitPane dividerPositions="0.5">
                <!-- Left side: Ingredients input and list -->
                <items>
                    <Pane prefHeight="1008.0" prefWidth="1052.0">
                        <VBox prefHeight="691.0" prefWidth="714.0" spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10">
                                <TextField fx:id="ingredientField" prefHeight="50" prefWidth="600" promptText="Enter ingredient..." styleClass="text-field" HBox.hgrow="ALWAYS" />
                                <Button fx:id="addIngredientButton" styleClass="button" text="Add" />
                            </HBox>
                            <AnchorPane prefHeight="729.0" prefWidth="694.0">
                                <children>
                                    <ListView fx:id="ingredientListView" maxHeight="581.0" prefHeight="580.0" prefWidth="647.0" styleClass="ingredient-list-view" />
                                </children>
                            </AnchorPane>
                        </VBox>
                    </Pane>

                    <!-- Right side: Transparent text area for the recipe -->
                    <Pane>
                        <VBox layoutX="2.0" layoutY="28.0" prefHeight="980.0" prefWidth="922.0" spacing="10" style="-fx-padding: 10;">
                            <TextFlow fx:id="recipeTextArea" prefHeight="960.0" prefWidth="978.0" stylesheets="@../../../Styling/style.css" />
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </VBox>
                    </Pane>
                </items>
            </SplitPane>
        </center>

        <!-- Bottom -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="generateButton" styleClass="button" text="Generate Recipe" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
