<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImage" preserveRatio="false" StackPane.alignment="CENTER" />


    <!-- Frosted Glass Content Pane -->
    <BorderPane fx:id="mainPane" styleClass="main-pane">
        <!-- Top -->
        <top>

            <HBox fx:id="topBar" prefHeight="25.0" prefWidth="497.0" spacing="10" styleClass="hbox-top">
                <Label styleClass="label-title" text="FlavorBot" />
            <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="1916.0">
               <children>
                      <Button fx:id="preferencesButton" styleClass="preferences-button" text="Preferences" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </HBox>

            <HBox fx:id="topBar" spacing="10" styleClass="hbox-top">
                <Label styleClass="label-title" text="FlavorBot" />
                <Button fx:id="preferencesButton" styleClass="preferences-button" text="Preferences" />

            </HBox>
        </top>

        <!-- Center: SplitPane for left (Ingredients) and right (Recipe Output) -->
        <center>
            <SplitPane dividerPositions="0.5">
                <!-- Left side: Ingredients input and list -->
                <items>
                    <Pane prefHeight="1008.0" prefWidth="1052.0">
                        <VBox prefHeight="691.0" prefWidth="714.0" spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10">
                                <TextField fx:id="ingredientField" prefHeight="50" prefWidth="600" promptText="Enter ingredient..." styleClass="text-field" HBox.hgrow="ALWAYS" />
                                <Button fx:id="addIngredientButton" styleClass="button" text="Add" />
                            </HBox>

                     <AnchorPane prefHeight="729.0" prefWidth="694.0">
                        <children>
                                  <ListView fx:id="ingredientListView" maxHeight="581.0" prefHeight="580.0" prefWidth="647.0" styleClass="ingredient-list-view" />
                        </children>
                     </AnchorPane>

                            <ListView fx:id="ingredientListView" maxHeight="400" styleClass="ingredient-list-view" VBox.vgrow="ALWAYS" />

                        </VBox>
                    </Pane>

                    <!-- Right side: Transparent text area for the recipe -->
                    <Pane>

                        <VBox layoutX="2.0" layoutY="28.0" prefHeight="980.0" prefWidth="922.0" spacing="10" style="-fx-padding: 10;">
                     <TextFlow fx:id="recipeTextArea" prefHeight="960.0" prefWidth="978.0" stylesheets="@../../../Styling/style.css" />
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>

                        <VBox spacing="10" style="-fx-padding: 10;">
                            <TextArea fx:id="recipeTextArea" editable="false" prefHeight="460.0" promptText="Generated Recipe will appear here..." styleClass="recipe-text-area" wrapText="true" />

                        </VBox>
                    </Pane>
                </items>
            </SplitPane>
        </center>

        <!-- Bottom -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="generateButton" styleClass="button" text="Generate Recipe" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
