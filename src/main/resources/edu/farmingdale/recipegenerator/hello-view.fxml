<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="stackPane"
           fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImage"
               preserveRatio="false"
               fitWidth="Infinity"
               fitHeight="Infinity"
               StackPane.alignment="CENTER"/>

    <!-- Frosted Glass Content Pane -->
    <BorderPane fx:id="mainPane" styleClass="main-pane">
        <!-- Top -->
        <top>
            <HBox fx:id="topBar" spacing="10" styleClass="hbox-top">
                <Label text="FlavorBot" styleClass="label-title" />
                <Button fx:id="preferencesButton" text="Preferences" styleClass="preferences-button" />
            </HBox>
        </top>

        <!-- Center: SplitPane for left (Ingredients) and right (Recipe Output) -->
        <center>
            <SplitPane dividerPositions="0.5">
                <!-- Left side: Ingredients input and list -->
                <items>
                    <Pane>
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10">
                                <TextField fx:id="ingredientField" promptText="Enter ingredient..." HBox.hgrow="ALWAYS" styleClass="text-field" />
                                <Button fx:id="addIngredientButton" text="Add" styleClass="button add-ingredient-button" />
                            </HBox>
                            <ListView fx:id="ingredientListView"
                                      maxHeight="400"
                                      VBox.vgrow="ALWAYS"
                                      styleClass="ingredient-list-view" />
                        </VBox>
                    </Pane>

                    <!-- Right side: Transparent text area for the recipe -->
                    <Pane>
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <TextArea fx:id="recipeTextArea" promptText="Generated Recipe will appear here..." editable="false"
                                      wrapText="true" styleClass="recipe-text-area" />
                        </VBox>
                    </Pane>
                </items>
            </SplitPane>
        </center>

        <!-- Bottom -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="generateButton" text="Generate Recipe" styleClass="button generate-button" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
