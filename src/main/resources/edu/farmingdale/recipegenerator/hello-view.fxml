<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="570.0" prefWidth="705.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Top: Title Bar -->
    <top>
        <HBox style="-fx-background-color: #336699;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="FlavorBot" />
            <Button fx:id="preferencesButton" onAction="#openPreferencesWindow" style="-fx-background-color: #2980b9; -fx-text-fill: white;" text="Preferences">
            <HBox.margin>
               <Insets left="545.0" />
            </HBox.margin></Button>
        </HBox>
    </top>

    <!-- Center: Ingredient Input and List -->
    <center>
        <VBox>
            <HBox>
                <TextField fx:id="ingredientField" promptText="Enter ingredient..." HBox.hgrow="ALWAYS" />
                <Button fx:id="addIngredientButton" style="-fx-background-color: #66cc66; -fx-text-fill: white;" text="Add" />
            </HBox>
            <ListView fx:id="ingredientListView" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

    <!-- Bottom: Generate Button -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="generateButton" style="-fx-background-color: #ff9933; -fx-text-fill: white;" text="Generate Recipe" />
        </HBox>
    </bottom>

</BorderPane>
