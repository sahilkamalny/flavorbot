<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:id="stackPane"
           fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImage"
               preserveRatio="true"
               opacity="0.8"
               StackPane.alignment="CENTER" />

    <!-- Frosted Glass Content Pane -->
    <BorderPane fx:id="mainPane"
                prefHeight="570.0"
                prefWidth="705.0"
                styleClass="main-pane">

        <!-- Top -->
        <top>
            <HBox fx:id="topBar" spacing="10" styleClass="hbox-top">
                <Label text="FlavorBot" styleClass="label-title" />
                <Button fx:id="preferencesButton" text="Preferences" styleClass="button preferences-button" />
            </HBox>
        </top>

        <!-- Center -->
        <center>
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="ingredientField" promptText="Enter ingredient..." HBox.hgrow="ALWAYS" styleClass="text-field" />
                    <Button fx:id="addIngredientButton" text="Add" styleClass="button add-ingredient-button" />
                </HBox>
                <ListView fx:id="ingredientListView"
                          maxHeight="400"
                          VBox.vgrow="ALWAYS"
                          styleClass="ingredient-list-view" />
            </VBox>
        </center>

        <!-- Bottom -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="generateButton" text="Generate Recipe" styleClass="button generate-button" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
