<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.farmingdale.recipegenerator.MainController">

    <!-- Top: Title Bar -->
    <top>
        <HBox style="-fx-background-color: #336699;">
            <Label text="Recipe Generator"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button fx:id="preferencesButton" onAction="#openPreferencesWindow" text="Preferences"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Center: Ingredient Input and List -->
    <center>
        <VBox>
            <HBox>
                <TextField fx:id="ingredientField" promptText="Enter ingredient..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="addIngredientButton" text="Add"
                        style="-fx-background-color: #66cc66; -fx-text-fill: white;"/>
            </HBox>
            <ListView fx:id="ingredientListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

    <!-- Bottom: Generate Button -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="generateButton" text="Generate Recipe"
                    style="-fx-background-color: #ff9933; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
